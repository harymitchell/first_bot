doctype html
html
  head
    title Search
    link(rel='stylesheet', type='text/css', href='stylesheets/main.css')
  body
    #buttons
      label
        input#query(value='cats', type='text')
        button#search-button(onclick='feed()') Get Videos
    #spike
      input#id_to_video(value='...type comment here', type='text')
      button#send_spike(onclick='postComment()') Send Message
    #search-container
    pre#response.
    #login-container.pre-auth
      | This application requires access to your YouTube account.
      | Please 
      a#login-link(href='#') authorize
      |  to continue.
    #logout-container.sign-out
      button#signout-button(onclick='signOut()') Sign Out
    #video-container
    .button-container
      button#prev-button.paging-button(onclick='previousPage();') Previous Page
      button#next-button.paging-button(onclick='nextPage();') Next Page
    
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
    script(src='/javascripts/search2.js')
    script(src='/javascripts/main.js')
    script(type='text/javascript', src='/javascripts/auth.js')
    script(type='text/javascript', src='/javascripts/uploads.js')
    script(src='https://apis.google.com/js/client.js?onload=googleApiClientReady')
